<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mentor Profiles</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><img src="/media/logo.jpg" alt="Institute Logo" /></li>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About Us</a></li>
                <li><a href="/mentorship_oppur">Mentorship Opportunities</a></li>
                <li><a href="/profile">Mentor Profiles</a></li>
                <li><a href="/resources">Resources</a></li>
            </ul>
        </nav>
    </header>
    <h1>This is the Mentor Profile Page</h1>
    <h2>Mentor Profiles</h2>
    <section id="mentor-profiles">
        <!-- Mentor profiles dynamically generated from the server data -->
        <div class="mentor">
            <% if (data && data.length > 0) { %>
                <% data.forEach((mentor) => { %>
                    <div class="card"> 
                        <img src="<%= mentor.profilePicture || '/media/default_avatar.webp' %>" alt="Avatar" style="width:100%">
                        <div class="container">
                            <h3><b><%= mentor.username %></b></h3>
                            <p><strong>Category:</strong> <%= mentor.type %></p>
                            <p><b>Contact here : <%= mentor.email %></b></p>
                        
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No mentor profiles available.</p>
            <% } %>
        </div>
        
    </section>

    <!-- Debugging: Output the 'data' variable -->
    <!-- <script>
        console.log('Data:', "<%= data %>");
    </script> -->
</body>
</html>
